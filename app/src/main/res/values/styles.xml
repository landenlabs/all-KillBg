<resources>

    <!-- Base application theme. -->
    <!--
    "Theme.AppCompat.Light.DarkActionBar"
    -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <!--
    parent="Widget.AppCompat.Button"
    -->
    <style name="Btn" >
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/btn_bgcolor_state</item>
        <item name="android:foreground">@drawable/ripple_white_borderless</item>
        <!--
          <item name="android:background">@drawable/abc_edit_text_material</item>
          <item name="android:textColor">#fff</item>
        -->
        <item name="android:textColor">@drawable/btn_color_state</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>

        <!-- Text shadow -->
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>

    </style>

    <style name="DetailApp" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:background">#444</item>
        <!--
        <item name="android:textColor">#fff</item>
        -->
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="Detail2App" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">14sp</item>
        <!--
        <item name="android:background">@drawable/btn_bgcolor_state</item>
        <item name="android:textColor">#fff</item>
        -->
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">1dp</item>
    </style>
</resources>
